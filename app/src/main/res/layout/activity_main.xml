<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/edt_Tim_A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Nama Tim A"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_Tim_B"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/edt_Tim_A"
            android:layout_marginTop="20dp"
            android:hint="Nama Tim B"
            app:layout_constraintTop_toBottomOf="@id/edt_Tim_A" />

        <Button
            android:id="@+id/btn_Input_Tim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:onClick="startInput"
            android:text="INPUT"
            app:layout_constraintTop_toBottomOf="@id/edt_Tim_B" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>